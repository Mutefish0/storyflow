{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "base/*": ["src/base/*"],
            "modules/*": ["src/modules/*"],
            "libs/*": ["libs/*"]
        },
        "outDir": "dist",
        "module": "es2015",
        "target": "es2015",
        "lib": [
            "es6",
            "dom"
        ],
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "jsx": "react" 
    },
    "exclude": [
        "node_modules"
    ]
}